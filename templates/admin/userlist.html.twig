{% extends '/admin/base.html.twig' %}
{% block menu %}
<div class="sidebar-menu">
            <ul>
                <li>
                    <a href="{{path("admin_home")}}" class=""><span class="uil uil-home"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="{{path("admin_userlist")}}" class="active"><span class="uil uil-user"></span>
                        <span>Utilisateurs</span></a>
                </li>
                <li>
                    <a href=""><span class="uil uil-books"></span>
                        <span>Classe</span></a>
                </li>
                <li>
                    <a href="{{path ("admin_filelist")}}"><span class="uil uil-folder"></span>
                        <span>Ressource</span></a>
                </li>
                <li>
                    <a href=""><span class="uil uil-home"></span>
                        <span>test1</span></a>
                </li>
                <li>
                    <a href=""><span class="uil uil-home"></span>
                    <span>test2</span></a>
                </li>
            </ul>
        </div>
{% endblock %}

{% block body %}
<main>

            <div class="recent-grid">
                <div class="projects">
                        {% if message is defined %}
                            <h3 class="erreur">{{message}} !</h3>
                        {% endif %}
                    <div class="card">
                        <div class="card-header">
                            <h3>Table des utilisateurs</h3>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table width="100%">
                                    <thead>
                                        <tr>
                                            <td>ID</td>
                                            <td>Email</td>
                                            <td>Status</td>
                                            <td>Modification</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            {% for user in users %}
                                            <tr>
                                                <td id="userId">{{ user.id }}</td>
                                                <td id="userEmail">{{ user.email }}</td>
                                                <td>
                                                    {% for role in user.roles %}
                                                        {% if role == "ROLE_USER" %}
                                                            Utilisateur <span class="status grey"></span>
                                                        {% elseif role == "ROLE_ADMIN" %}
                                                            Administrateur <span class="status orange"></span>
                                                        {% elseif role == "ROLE_TEACHER" %}
                                                            Professeur <span class="status purple"></span>
                                                        {% elseif role == "ROLE_ELEVE" %}
                                                            Élève <span class="status green"></span>
                                                        {% endif %}
                                                    {% endfor %}
                                                </td>
                                                <td>
                                                    <div class="contact">
                                                        <span class="uil uil-trash-alt" id="togg2"></span>
                                                        <span class="uil uil-edit" id="togg1"></span>
                                                    </div>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-modif" id="d1">
                    <div class="card">
                        <div class="card-header">
                            <h3>Modifier l'utilisateur</h3>

                        </div>

                        <div class="card-body">
                            <div class="customer">
                                <div class="info">
                                    <i class="uil uil-user icone"></i>
                                    <div>
                                        <h4 id="display-userEmail-1"></h4>
                                        <small id="display-userId-1"></small>
                                    </div>
                                </div>
                                <div class="contact">
                                    
                                </div>
                            </div>
                            <div class="customer">
                                <div class="info">
                                    <div>
                                        <h4>Rôle:</h4>
                                        <small></small>
                                    </div>
                                </div>
                                <div class="test">
                                    <input type="checkbox" id="active1" name="color" value="eleve">
                                    <label for="eleve">Eleve</label>

                                    <input type="checkbox" id="active1" name="color" value="prof">
                                    <label for="prof">Prof</label>

                                    <input type="checkbox" id="active1" name="color" value="admin">
                                    <label for="admin">Admin</label>
                                </div>
                                <div class="contact">
                                    <span class="uil uil-edit" id="active1"></span>
                                </div>
                            </div>
                            <div class="customer display-classe" id="eleve-classe">
                                <div class="info">
                                    <div>
                                        <h4>Modifier Classe:</h4>
                                        <small></small>
                                    </div>
                                </div>
                                <div>
                                    <select name="classe-select" id="classe-select">
                                    <option value="">--Choisir la classe--</option>
                                    {% for classe in classes %}
                                         <option value="{{ classe.id }}">{{ classe.libelle }}</option>
                                    {% endfor %}

                                    </select>
                                </div>
                                <div class="contact">
                                </div>
                            </div>
                            <div class="customer display-classe" id="prof-matière">
                                <div class="info">
                                    <div>
                                        <h4>Modifier Matière:</h4>
                                        <small></small>
                                    </div>
                                </div>
                                <div>
                                    <select name="classe-matiere" id="classe-matiere">
                                        <option value="">--Choisir la matière--</option>
                                        {% for matiere in matieres %}
                                         <option value="{{ matiere.id }}">{{ matiere.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="contact">
                                </div>
                            </div>
                            <div class="customer">
                                <div class="info">
                                    <div>
                                        <h4></h4>
                                        <small></small>
                                    </div>
                                </div>
                                <div>
                                    <button class="display-valider"  id="valider">Valider <span class="uil uil-check"></span></button>
                                </div>
                                <div class="contact">
                                </div>
                            </div>
                        
                        </div>

                    </div>
                </div>
                <div class="table-delete" id="d2">
                    <div class="card">
                        <div class="card-header">
                            <h3>Supprimer l'utilisateur</h3>

                        </div>

                        <div class="card-body">
                            <div class="customer">
                                <div class="info">
                                    <i class="uil uil-user icone"></i>
                                    <div>
                                        <h4 id="display-userEmail-2"></h4>
                                        <small id="display-userId-2"></small>
                                    </div>
                                </div>
                                <div class="contact">
                                </div>
                            </div>
                            
                        </div>
                        <div class="customer">
                            <div class="info">
                                <div>
                                    <h4></h4>
                                    <small></small>
                                </div>
                            </div>
                            <div>
                                <button class="" id="">Supprimer <span class="uil uil-times"></span></button>
                            </div>
                            <div class="contact">
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </main>
    </div>
    
</body>
{% endblock %}